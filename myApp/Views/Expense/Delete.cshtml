@model myApp.Models.Expense
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-black-50 pl-3">Delete</h1>

<form method="post" asp-action="DeletePost">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    @*thsi is used for showing error messages for All fields and modelOnly field*@
    <div class="border p-3">
        <div class="form-group row">
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <input asp-for="Id" hidden/>
                    <div class="col-4">
                        <label asp-for="ExpenseType"></label>

                    </div>
                    <div class="col-4">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ExpenseType" class="form-control" disabled />
                        
                    </div>
                    <div class="col-4">
                        <input asp-for="Amount" class="form-control" disabled/>
                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="index" class="btn btn-success w-75">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

