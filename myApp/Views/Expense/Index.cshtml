@model IEnumerable<myApp.Models.Expense>

@{
    ViewData["Title"] = "Expense";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary">Create new Expense</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Expense Type</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Expense in Model)
                {
                    <tr>
                        <td width="35%">@Expense.ExpenseType</td>
                        <td width="35%">@Expense.Amount</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Expense" asp-action="Update" asp-route-Id="@Expense.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Expense" asp-action="Delete" asp-route-Id="@Expense.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
</div>
