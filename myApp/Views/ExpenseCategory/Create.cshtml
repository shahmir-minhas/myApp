@model myApp.Models.ExpenseCate
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post" asp-action="Create">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    @*thsi is used for showing error messages for All fields and modelOnly field*@
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense Category</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ExpenseCategory"></label>

                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ExpenseCategory" class="form-control" />
                        <span asp-validation-for="ExpenseCategory" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="index" class="btn btn-info w-75">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}